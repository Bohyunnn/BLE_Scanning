<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hansung.ifindthanq.BLESearchActivity">

    <TextView
        android:id="@+id/txtState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="블루투스 활성화 On/Off"
        android:textSize="34dp" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doTrack"
        android:text="추적하기"
        android:textSize="24sp" />

    <Button
        android:id="@+id/endSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="mEndBluetoothSearch"
        android:text="검색 종료"
        android:textSize="24sp" />

    <TextView
        android:text="페어링된 목록"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listPaired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="검색된 목록"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
